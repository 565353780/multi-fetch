<?xml version="1.0"?>

<launch>

  <arg name="robot_num" default="3" />
  <arg name="load_robot_description" default="true"/>
  <arg name="robot_description" default="robot_description"/>

  <include file="$(find multi_robot_gazebo)/launch/move_group.launch" if="$(eval arg('robot_num') > 0)">
    <arg name="robot_idx" value="$(eval arg('robot_num') - 1)"/>
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
    <arg name="robot_description" value="$(arg robot_description)"/>
  </include>

  <include file="$(find multi_robot_gazebo)/launch/multi_fetch_move_group.launch" if="$(eval arg('robot_num') > 0)">
    <arg name="robot_num" value="$(eval arg('robot_num') - 1)"/>
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
    <arg name="robot_description" value="$(arg robot_description)"/>
  </include>

</launch>
